{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "outDir": "./lib",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true
    },
    "exclude": ["lib", "node_modules"]
}
