{
    "name": "jest-mock-props",
    "version": "0.0.0",
    "description": "Mock module and object properties",
    "main": "main.js",
    "types": "main.d.ts",
    "scripts": {
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "commit": "git-cz",
        "commitlint": "commitlint-travis",
        "lint": "eslint",
        "release": "semantic-release",
        "test": "jest",
        "test-watch": "jest --watch"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./lib"
                }
            ]
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "rules": {
            "header-max-length": [0, "always", 0]
        },
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "tslint"
        ],
        "*.{js,ts}": [
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "author": "iamogbz",
    "license": "GPL-3.0",
    "homepage": "https://github.com/iamogbz/jest-mock-props#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/jest-mock-props"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/jest-mock-props/issues"
    },
    "keywords": [
        "node",
        "nodejs",
        "jest",
        "testing",
        "jest-mock",
        "mock",
        "ci",
        "package",
        "npm"
    ],
    "engines": {
        "node": ">=8.0.0"
    },
    "peerDependencies": {
        "jest": ">=24.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.11.5",
        "@babel/core": "^7.10.5",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@commitlint/travis-cli": "^9.1.2",
        "@types/copy-webpack-plugin": "^6.0.0",
        "@types/jest": "^26.0.12",
        "@types/node": "^14.6.2",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^4.41.21",
        "acorn": "^7.3.1",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.2.1",
        "copy-webpack-plugin": "^6.1.0",
        "coveralls": "^3.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.8.0",
        "husky": "^4.2.5",
        "jest": "^24.9.0",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rxjs": "^6.6.2",
        "semantic-release": "^17.1.1",
        "ts-jest": "^24.3.0",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.3",
        "typescript": "^4.0.2",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    }
}
